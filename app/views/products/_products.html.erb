<!-- Każdy produkt zajmie 4 kratki stąd md-4 -->
<!-- W jednym rzędzie będą 3 produkty -->
<!-- products jest przekazane np z index i wynosi od 1 do 9--->

<% (products).each_slice(3) do |slice| %>
  <div class="row">
    <% slice.each do |product| %>
      <div class="col-md-4">

        <div class="thumbnail"> <!-- zamiast tekstu to obrazek będzie linkiem -->
          <%= link_to product_path(1) do %>
            <%= image_tag Faker::Placeholdit.image("640x480", 'jpg', 'cccccc') %> <!-- Zostaną wygenerowane obrazki o danym rozmiarze -->
          <% end %>

          <div class="caption">
            <h3><%= link_to Faker::Hacker.noun.titleize, product_path(1) %></h3>
            <p><%= simple_format(truncate(Faker::Hacker.say_something_smart, length: 90)) %></p>
            <p class="lead"><%= number_to_currency Faker::Number.decimal(2, 2) %></p>
            <p>
              <%= link_to "#", class: "btn btn-primary" do %>
                <span class="fa fa-shopping-cart"></span> <span>Dodaj do koszyka</span>  <!-- fa to FontAwesome czyli ikonki -->
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>